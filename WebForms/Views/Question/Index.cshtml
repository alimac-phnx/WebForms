@model IEnumerable<WebForms.Models.Question>
@{
    var template = ViewBag.Template as WebForms.Models.Template;
}

<h2>Questions for the template "@template.Name"</h2>

<table class="table">
    <thead>
        <tr>
            <th>Text</th>
            <th>Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var question in Model)
        {
            <tr>
                <td>@question.Text</td>
                <td>@question.Type</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = question.Id })">Edit</a> |
                    <a href="@Url.Action("Details", new { id = question.Id })">Details</a> |
                    <form asp-action="Delete" asp-route-id="@question.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", new { templateId = template.Id })" class="btn btn-primary">Add new question</a>
