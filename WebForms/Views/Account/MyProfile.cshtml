@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3>@Localizer["Profile"]</h3>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="CreateSalesforceAccount">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label font-weight-bold">@Localizer["Username"]:</label>
                            <div class="col-sm-9">
                                <p class="form-control-plaintext">@Model.Username</p>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label font-weight-bold">@Localizer["E-mail"]:</label>
                            <div class="col-sm-9">
                                <p class="form-control-plaintext">@Model.Email</p>
                            </div>
                        </div>

                        <div class="form-group row mt-4">
                            <div class="col-sm-12 text-center">
                                <button type="submit" id="myButton" class="btn btn-success">@Localizer["Salesforce me"]</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
