﻿@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model IEnumerable<WebForms.Models.Template>

<h2 class="mt-4 mb-4">@Localizer["My templates"]</h2>

<div class="table">
    <table class="table table-hover">
        <thead class="table">
            <tr>
                <th>@Localizer["Name"]</th>
                <th>@Localizer["Description"]</th>
                <th>@Localizer["Questions"]</th>
                <th>@Localizer["Date of creation"]</th>
                <th>@Localizer["Actions"]</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var template in Model)
            {
                <tr>
                    <td>@template.Name</td>
                    <td>@template.Description</td>
                    <td>@template.Questions.Count</td>
                    <td>@template.CreatedAt</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = template.Id })" class="btn btn-warning btn-sm">
                            <i class="fas fa-pencil-alt"></i>
                        </a>
                        <a href="@Url.Action("Details", "Template", new { id = template.Id })" class="btn btn-info btn-sm">
                            <i class="fas fa-eye"></i>
                        </a>
                        <form asp-action="Delete" asp-route-id="@template.Id" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<a href="@Url.Action("Create")" class="btn btn-primary mt-3">@Localizer["Create new"]</a>